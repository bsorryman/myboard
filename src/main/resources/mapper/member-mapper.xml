<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.myboard.member.repository.MemberMapper">
    
    <resultMap id="member" type="com.myboard.member.domain.Member">
        <result column="idx" property="idx" />
        <result column="member_id" property="memberId" />
        <result column="member_pwd" property="memberPwd" />
        <result column="member_name" property="memberName" />
        <result column="member_email" property="memberEmail" />
        <result column="member_role" property="memberRole" />
        <result column="g_social_yn" property="gSocialYn" />        
        <result column="created_at" property="createdAt" />
    </resultMap>    
    
    <!-- Insert ThymeBoard Post -->
    <insert id="insertMember" parameterType="com.myboard.member.domain.Member">
        INSERT INTO tb_member(member_id, member_pwd, member_name, member_email, member_role, g_social_yn)
        VALUES(#{memberId}, #{memberPwd}, #{memberName}, #{memberEmail}, #{memberRole}, #{gSocialYn})
    </insert>
    
    <select id="selectBymemberId" parameterType="com.myboard.member.domain.Member" 
    resultMap="member">
        SELECT *
        FROM tb_member
        WHERE member_id = #{memberId}
    </select>        
</mapper>